<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовый стиль кнопки -->
    <style name="BaseButtonStyle">
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Вариант с синим свечением -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/btn_light_blue</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Вариант с зелёным свечением -->
    <style name="GreenGlowButton" parent="BaseButtonStyle">
        <item name="android:background">@drawable/btn_light_green</item>
    </style>
    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:buttonStyle">@drawable/btn_light_blue</item> <!-- Применяем стиль кнопки -->
    </style>


    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/spinner_background</item> <!-- добавим фон -->
        <item name="android:textColor">@color/white</item> <!-- текст белый -->
        <item name="android:textSize">18sp</item> <!-- размер текста -->
        <item name="android:padding">10dp</item> <!-- отступы -->
    </style>

    <style name="CustomSpinnerDropDownStyle">
        <item name="android:background">@android:color/white</item> <!-- фон для выпадающего списка -->
        <item name="android:textColor">@color/black</item> <!-- цвет текста -->
        <item name="android:textSize">16sp</item> <!-- размер текста в выпадающем списке -->
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#2A2A2A</item>
    </style>



</resources>
