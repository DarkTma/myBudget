<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Свечение (граница кнопки) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Прозрачный фон -->
            <corners android:radius="12dp"/> <!-- Скругление углов -->
            <stroke android:width="10dp" android:color="?attr/borderColor"/> <!-- Цвет границы -->
        </shape>
    </item>

    <!-- Основной фон кнопки -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#101010"/> <!-- Тёмный фон -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
