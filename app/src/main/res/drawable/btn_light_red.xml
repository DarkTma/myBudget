<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Граница свечения -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#00000000"/> <!-- Прозрачный -->
                <corners android:radius="12dp"/>
                <stroke android:width="10dp" android:color="#FF0000"/> <!-- Синяя граница -->
            </shape>
        </item>

        <!-- Фон кнопки -->
        <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
            <shape android:shape="rectangle">
                <solid android:color="#101010"/> <!-- Тёмный цвет -->
                <corners android:radius="12dp"/>
            </shape>
        </item>

    </layer-list>
