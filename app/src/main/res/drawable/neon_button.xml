<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешнее свечение -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="32dp" />
            <stroke android:width="6dp" android:color="#00FFFF" />
        </shape>
    </item>

    <!-- Средний слой (мягкое свечение) -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#001166" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Основная кнопка -->
    <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#0022FF" />
            <corners android:radius="32dp" />
        </shape>
    </item>
</layer-list>
